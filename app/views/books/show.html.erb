<h2>Book detail</h2>
<div>
  <%= flash[:notice] %>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p><%= @book.user.name %></p>
    <%= link_to "Edit",edit_book_path(@book) %>
  <% if @book.user == current_user %>
    <%= link_to "Destroy",book_path(@book.id),method: :delete, "data-confirm"=>"本当に削除しますか？" %>
  <% end %>
</div>
