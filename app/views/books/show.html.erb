<p id ="notice"></p>
<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'users/user',user: @user %>
      <%= render 'book',book: @book %>
    </div>
    <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@bookf.user.id) do %>
                <%= image_tag @bookf.user.get_profile_image(100,100) %><br>
                <%= @bookf.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@bookf.id) do %>
                <%=@bookf.title %>
              <% end %>
            </td>
            <td><%= @bookf.body %></td>
            <td>
              <% if @bookf.user == current_user %>
                <%= link_to "Edit",edit_book_path(@bookf) ,class:'btn btn-sm btn-success'%>
              <% end %>
            </td>
            <td>
              <% if @bookf.user == current_user %>
                <%= link_to "Destroy",book_path(@bookf.id),method: :delete, "data-confirm"=>"本当に削除しますか？" ,class:'btn btn-sm btn-danger' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


