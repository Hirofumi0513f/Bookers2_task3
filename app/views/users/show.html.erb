<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= render 'user',user: @user %>
<%= link_to "Edit", edit_user_path(@user.id) %>
<%= render 'books/book',book: @book %>